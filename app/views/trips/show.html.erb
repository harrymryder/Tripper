<div class="trip-container">

  <div class="cards-wrap">
    <h4>CUSTOMISE YOUR TRIP</h4>
    <p>Drag and drop activites to personally tailor your trip</p>
    <div class="cards-container">
      <div class="row">
        <% @pois = PointOfInterest.all %>
        <% @pois.each do |poi| %>
          <div class="col-xs-12 ">
            <div class="card-box card-live">
                <h5><%= poi.name %></h5>
                <i class="fas fa-plus plus"></i>
                <div class="card-description">
                  <p><%= poi.description %></p>
                </div>
                <%= image_tag poi.photo, class: 'card-img'%>
            </div>
          </div>
          <% end %>
      </div>
    </div>
  </div>

  <div class="map-container">
    <style>
      .marker {
          display: block;
          border: none;
          border-radius: 50%;
          cursor: pointer;
          padding: 0;
      }
    </style>
    <div id='map' data-pin = "<%= asset_path('pin.png') %>"></div>
    <%= javascript_pack_tag "map" %>
  </div>

</div>


