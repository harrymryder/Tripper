<div class="dashboard-background-img" style="background-image: linear-gradient(135deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url('https://images.unsplash.com/photo-1507295386538-ddd5e86cd597?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=530c7e3fde63061f540c50986ce2a699&auto=format&fit=crop&w=2378&q=80');">

  <div class="dashboard-header">
    <h6>Your trips</h6>
  </div>

  <div class="white-container">
<!--     <div class="dashboard-cards-wrap">
      <div class="dashboard-cards-container"> -->
        <div class="row">
          <% @trips.each do |trip| %>
            <div class="col-xs-12">
              <div class="dashboard-card">
                <div class="dashboard-card-header">
                  <h5><%= trip.start_location %></h5>
                </div>
                <div class="dashboard-card-button">
                  <%= link_to "Edit trip", trip_path(trip), class: "dashboard-card-btn" %>
                </div>
                <%#= image_tag trip.first.point_of_interests.first.photo, alt: "alttext" %>

                <div class="dashboard-card-image" style="background-image: url('https://images.unsplash.com/photo-1517428401505-14146d0d739c?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=cf66674d50ec9b75de14ec3a5e53e0f5&auto=format&fit=crop&w=1500&q=80');">
                </div>
                <div class="dashboard-card-trip-dates">
                  <p><%= trip.start_date.strftime("%d-%m-%Y") %> -> <%= trip.end_date.strftime("%d-%m-%Y") %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
<!--     </div>
  </div> -->
</div>

