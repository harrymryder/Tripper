<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1508672019048-805c876b67e2?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=bd27a515bce2dade58bc288fde28f290&auto=format&fit=crop&w=1693&q=80');">


  <div class="banner-content">
    <div>
      <h1>Tripper</h1>
      <p><span id="banner-typed-text"></span></p>
    </div>

    <%= simple_form_for @trip do |f| %>
      <%= f.input :start_location, placeholder: 'Country', label:false,  input_html: { id: 'start-location-autocomplete' } %>

      <%= f.input :start_date, placeholder: 'From', label:false, as: :string, input_html: { class: 'flatpickr-input' } %>

      <%= f.input :end_date, placeholder: 'Until', label:false, as: :string, input_html: { class: 'flatpickr-input' } %>

      <div>
        <%= f.button :submit, class: "form-btn btn btn-primary btn-lg" %>
      </div>

    <% end %>

    <div id="suggestions"></div>
    <div id="points-of-interest" data-poi='<%= @points_of_interest.to_json %>'></div>

  </div>
</div>

<%= javascript_pack_tag 'datepicker' %>
<%#= javascript_pack_tag 'application' %>
<%= javascript_pack_tag 'autocomplete' %>

