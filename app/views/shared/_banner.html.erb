<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1522199873717-bc67b1a5e32b?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=6572714017f8061619ce999f4a3c0d97&auto=format&fit=crop&w=1052&q=80');">
  <div class="banner-content">
    <h1>Tripper</h1>
    <p><span id="banner-typed-text"></span></p>

    <%= simple_form_for @trip do |f| %>
      <%#= select_tag "timezone", options_from_collection_for_select(
            ActiveSupport::TimeZone.all.map { |tz| tz.tzinfo }.sort_by { |tzinfo| tzinfo.name }, :name, :name) %>
      <%= f.input :start_location, placeholder: 'Location', label:false %>
      <%= f.input :start_date, placeholder: 'From', label:false, as: :string, input_html: { class: 'flatpickr-input' } %>
      <%= f.input :end_date, placeholder: 'Until', label:false, as: :string, input_html: { class: 'flatpickr-input' } %>
      <%= f.button :submit, class: "form-btm btn btn-primary btn-lg" %>
    <% end %>
  </div>
</div>

<%= javascript_pack_tag 'datepicker' %>

